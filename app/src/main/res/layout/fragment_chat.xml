<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fragments.ChatFragment"
    android:background="@color/gov_blue">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_30sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center|top"
                android:src="@drawable/govtechlogo"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chat_photo1"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/bg_message_left"
                    android:padding="@dimen/_7sdp"
                    android:text="Hello What's up ?"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:34"
                android:layout_marginLeft="@dimen/_120sdp"
                android:textColor="#9AFFFFFF"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:textStyle="normal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_6sdp"
                android:gravity="right"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/bg_message_right"
                    android:padding="@dimen/_7sdp"
                    android:text="Hi! I'm your GovTech Assistant"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_6sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/bg_message_right"
                    android:padding="@dimen/_7sdp"
                    android:text="Just ask me a question and I'll try to find an answer."
                    android:textColor="@color/black"
                    android:gravity="left|center"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:35"
                android:layout_marginLeft="@dimen/_120sdp"
                android:textColor="#9AFFFFFF"
                android:textSize="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_gravity="right"
                android:gravity="center"
                android:textStyle="normal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/chat_photo2"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/bg_message_left"
                    android:padding="@dimen/_7sdp"
                    android:text="Do I need to have a team to apply"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:35"
                android:layout_marginLeft="@dimen/_200sdp"
                android:textColor="#9AFFFFFF"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:textStyle="normal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_6sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/bg_message_right"
                    android:padding="@dimen/_7sdp"
                    android:text="No, it is not necessary"
                    android:textColor="@color/black"
                    android:gravity="left|center"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_6sdp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:background="@drawable/bg_message_right"
                    android:padding="@dimen/_7sdp"
                    android:text="If you don't have a team yet, no worries : we will\n help you find one!"
                    android:textColor="@color/black"
                    android:gravity="left|center"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:36 Vu"
                    android:layout_marginLeft="@dimen/_120sdp"
                    android:textColor="#9AFFFFFF"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:textStyle="normal"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_37sdp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/bg_search_home"
        android:layout_margin="@dimen/_8sdp"
        android:hint="Type of message"
        android:gravity="center|left"
        android:textStyle="bold"
        android:paddingLeft="@dimen/_38sdp"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_add_emoji"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_gravity="bottom|left"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_link"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_gravity="bottom|right"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:src="@drawable/ic_microphone"
        android:layout_gravity="bottom|right"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>