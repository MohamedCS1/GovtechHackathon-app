<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentsActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:windowSoftInputMode="adjustPan"
        android:layout_height="wrap_content"
        android:background="@color/gov_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/bu_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:textColor="#EBFFFFFF"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"

            />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#72041C32"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/comment_photo1"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:padding="@dimen/_7sdp"
                android:text="MohamedCS"
                android:textColor="@color/gov_blue"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:layout_marginLeft="@dimen/_130sdp"
                android:padding="@dimen/_7sdp"
                android:textSize="@dimen/_8sdp"
                android:text="12m ago"
                android:textColor="@color/white"
                android:textStyle="normal" />



        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_54sdp"
                android:padding="@dimen/_2sdp"
                android:text="In such cases, the reason for not including the agency comments will be stated in the report."
                android:textColor="@color/black"
                android:textStyle="normal" />
    </LinearLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_37sdp"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/bg_search_home"
            android:gravity="center|left"
            android:hint="Add a comment... "
            android:paddingLeft="@dimen/_38sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:src="@drawable/ic_add_emoji" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:src="@drawable/ic_link" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:src="@drawable/ic_microphone" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>






</androidx.constraintlayout.widget.ConstraintLayout>